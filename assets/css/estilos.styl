@media (max-width: 768px)
    #masthead 
        padding-top 200px
        .masthead-heading h2
            font-size 45px
            line-height 50px
            margin 4rem auto  
    section
        min-height auto
        padding 50px 0 70px
        h2 
            margin 10px 
@media (max-width: 576px)
    section
        min-height auto
        padding 50px 0 70px
        h2 
            margin 10px
    #masthead 
        padding-top 5rem
        .masthead-heading h2
            font-size 30px
            line-height 35px
            margin 2rem auto 
.sticky.is-sticky
    position fixed
    left 0
    right 0
    top 0
    z-index 1000
    width 100%


.opacidad50
    opacity .5
.txtGrande
    font-size 1.5em
.miTooltip + .tooltip > .tooltip-inner
    background naranja

// estilos
.txtPrata
    font-family "Prata"
.txtBordo
    color bordo 
.txtDorado
    color dorado 
.txtVioleta 
    color violeta
.fondoBordo
    background-color bordo 
.fondoDorado
    background-color dorado 
.fondoVioleta 
    background-color violeta
.txtSombra
    text-shadow 2px 2px 2px #0A0403

